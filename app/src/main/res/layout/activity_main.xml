<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".homepage.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qoo.magicmirror.homepage.VerticalViewPager
            android:id="@+id/homepage_verticalviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/activity_main_iv_marginBottom"
            android:layout_marginLeft="@dimen/activity_main_iv_marginLeft"
            android:src="@mipmap/mirror" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_main_login_rl_marginBottom"
            android:layout_marginRight="@dimen/activity_main_login_rl_marginRight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/activity_main_login_tv"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_main_login_tv_textSize" />
        </RelativeLayout>
    </FrameLayout>
</com.zhy.autolayout.AutoRelativeLayout>
