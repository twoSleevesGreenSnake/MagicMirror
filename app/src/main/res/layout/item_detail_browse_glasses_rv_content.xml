<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail_brose_glasses_rv_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    >

    <ImageView
        android:id="@+id/item_detail_brose_glasses_rv_content_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"
        android:background="#123456"
        />

    <RelativeLayout
        android:id="@+id/item_detail_brose_glasses_rv_content_src_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/item_detail_brose_glasses_rv_content_src_content_layout1"
            android:layout_width="@dimen/item_detail_brose_glasses_rv_content_src_content_layout_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_content_src_content_layout_marginTop"
            android:background="#000000"
            android:orientation="vertical"
            android:paddingLeft="@dimen/item_detail_brose_glasses_rv_content_src_content_layout_paddingLeft"
            android:paddingRight="@dimen/item_detail_brose_glasses_rv_content_src_content_layout_paddingRight">

            <View
                android:id="@+id/item_detail_brose_glasses_rv_content_top_title_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_detail_brose_glasses_rv_content_top_title_view_height"
                android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_content_top_title_view_marginTop"
                android:background="#fff" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/item_detail_browse_glasses_rv_content_linearlayout_maginRight"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_detail_brose_glasses_rv_content_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/item_detail_brose_glasses_rv_content_top_title_view"
                        android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_content_title_tv_marginTop"
                        android:text="来自时尚之都英国"
                        android:textColor="#fff"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/item_detail_brose_glasses_rv_content_etitle_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/item_detail_brose_glasses_rv_content_title_tv"
                        android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_content_etitle_tv_marginTop"
                        android:text="11231245125125"
                        android:textColor="#fff"

                        android:textSize="24px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_detail_brose_glasses_rv_content_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/item_detail_brose_glasses_rv_content_location_tv_marginLeft"
                    android:text="巴黎"
                    android:textColor="#fff"
                    android:textSize="64px" />

            </RelativeLayout>

            <View
                android:id="@+id/item_detail_brose_glasses_rv_content_bottom_title_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_detail_brose_glasses_rv_content_bottom_title_view_height"
                android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_content_bottom_title_view_marginTop"
                android:background="#fff" />

            <TextView
                android:id="@+id/item_detail_brose_glasses_rv_content_src_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/item_detail_brose_glasses_rv_content_src_content_tv_marginBottom"
                android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_content_src_content_tv_marginTop"
                android:text="这是一段测试的巴拉巴这是一段测试的巴拉巴这是一段测试的巴拉巴这是一段测试的巴拉巴这是一段测试的巴拉巴这是一段测试的巴拉巴"
                android:textColor="#fff"
                android:textSize="26px" />
        </LinearLayout>
    </RelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>
