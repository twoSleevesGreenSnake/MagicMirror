<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_fragment_goods_iv"
        android:layout_width="270dp"
        android:layout_height="297dp" />

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="119dp">

        <TextView
            android:id="@+id/item_fragment_goods_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="SEE CONCEPT"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_fragment_goods_origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fragment_goods_name_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="法国巴黎"
            android:textColor="#333"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_fragment_goods_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_fragment_goods_name_tv"
            android:layout_marginRight="16dp"
            android:text="450"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fragment_goods_origin_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/line_of_create_account" />

        <TextView
            android:id="@+id/item_fragment_goods_describe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fragment_goods_origin_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:text="草莓红色圆框阅读镜"
            android:textColor="#333"
            android:textSize="30px" />
    </RelativeLayout>

</LinearLayout>