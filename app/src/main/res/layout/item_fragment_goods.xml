<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_fragment_goods_marginLeft"
    android:layout_marginTop="@dimen/item_fragment_goods_marginTop"
    android:orientation="vertical"
    android:id="@+id/item_fragment_goods_ll">

    <RelativeLayout
        android:layout_width="@dimen/item_fragment_goods_iv_width"
        android:layout_height="@dimen/item_fragment_goods_rl_height">

        <com.qoo.magicmirror.view.SYXImageLayout
            android:id="@+id/item_fragment_goods_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="@dimen/item_fragment_goods_detail_rl_width"
            android:layout_height="@dimen/item_fragment_goods_detail_rl_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/item_fragment_goods_name_tv"
                style="@style/ItemFragmentGoodsNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_fragment_goods_name_tv_marginLeft"
                android:layout_marginTop="@dimen/item_fragment_goods_name_tv_marginTop"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/item_fragment_goods_name_tv_textSize" />

            <TextView
                android:id="@+id/item_fragment_goods_origin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_fragment_goods_name_tv"
                android:layout_marginLeft="@dimen/item_fragment_goods_origin_tv_marginLeft"
                android:layout_marginTop="@dimen/item_fragment_goods_origin_tv_marginTop"
                android:textColor="@color/colorLight_Black"
                android:textSize="@dimen/item_fragment_goods_origin_tv_textSize" />

            <TextView
                android:id="@+id/item_fragment_goods_price_tv"
                style="@style/ItemFragmentGoodsPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/item_fragment_goods_name_tv"
                android:layout_marginRight="@dimen/item_fragment_goods_price_tv_marginRight"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/item_fragment_goosd_price_tv_textSize" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_fragment_goods_origin_tv"
                android:layout_marginLeft="@dimen/item_fragment_goods_black_line_iv_marginLeft"
                android:layout_marginRight="@dimen/item_fragment_goods_black_line_iv_marginRight"
                android:layout_marginTop="@dimen/item_fragment_goods_black_line_iv_marginTop"
                android:src="@mipmap/line_of_create_account" />

            <TextView
                android:id="@+id/item_fragment_goods_describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_fragment_goods_origin_tv"
                android:layout_marginLeft="@dimen/item_fragment_goods_describe_tv_marginLeft"
                android:layout_marginTop="@dimen/item_fragment_goods_describe_tv_marginTop"
                android:textColor="@color/colorLight_Black"
                android:textSize="@dimen/item_fragment_goods_describe_tv_textSize" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>