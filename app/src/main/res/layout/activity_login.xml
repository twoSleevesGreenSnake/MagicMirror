<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_login_close_iv_marginLeft"
            android:layout_marginTop="@dimen/activity_login_close_iv_marginTop"
            android:text="账号登录"
            android:textColor="#333"
            android:textSize="34px" />

        <ImageView
            android:id="@+id/activity_login_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_login_close_iv_marginLeft"
            android:layout_marginTop="@dimen/activity_login_close_iv_marginTop"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_login_black_line_iv_marginTop"
        android:src="@mipmap/line_of_create_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_phonenumber_and_password_tv_marginLeft"
        android:layout_marginTop="@dimen/activity_login_phonenumber_tv_marginTop"
        android:text="手机号"
        android:textColor="#333"
        android:textSize="24px" />

    <EditText
        android:id="@+id/activity_login_phone_number_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_phone_number_et_height"
        android:layout_marginLeft="@dimen/activity_login_phone_number_et_marginLeft_and_marginRight"
        android:layout_marginRight="@dimen/activity_login_phone_number_et_marginLeft_and_marginRight"
        android:layout_marginTop="@dimen/activity_login_phone_number_et_marginTop"
        android:background="@drawable/shape_login_edittext"
        android:inputType="number"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_phonenumber_and_password_tv_marginLeft"
        android:layout_marginTop="@dimen/activity_login_password_tv_marginTop"
        android:text="密码"
        android:textColor="#333"
        android:textSize="24px" />

    <EditText
        android:id="@+id/activity_login_password_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_password_et_height"
        android:layout_marginLeft="@dimen/activity_login_password_et_marginLeft"
        android:layout_marginRight="@dimen/activity_login_password_et_marginRight"
        android:layout_marginTop="@dimen/activity_login_password_et_marginTop"
        android:background="@drawable/shape_login_edittext"
        android:inputType="textPassword"
        android:password="true" />

    <TextView
        android:id="@+id/activity_login_forget_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/activity_login_forget_password_tv_marginRight"
        android:layout_marginTop="@dimen/activity_login_forget_password_tv_marginTop"
        android:text="忘记密码？"
        android:textColor="#333"
        android:textSize="26px" />

    <Button
        android:id="@+id/activity_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_btn_marginLeft"
        android:layout_marginRight="@dimen/activity_login_btn_marginRight"
        android:layout_marginTop="@dimen/activity_login_btn_marginTop"
        android:background="@mipmap/enable_state_button"
        android:text="登录"
        android:textColor="#fff" />

    <Button
        android:id="@+id/activity_login_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_login_create_account_marginLeft"
        android:layout_marginRight="@dimen/activity_login_create_account_marginRight"
        android:layout_marginTop="@dimen/activity_login_create_account_marginTop"
        android:background="@mipmap/create_account"
        android:text="创建账号"
        android:textColor="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activit_login_relativelayout_marginTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="使用社交账号"
            android:textColor="#333"
            android:textSize="30px" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_login_linearlayout_marginBottom"
        android:layout_marginTop="@dimen/activity_login_linearlayout_marginTop"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/activity_login_sina_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_login_sina_iv_marginLeft"
                android:src="@mipmap/sina_icon" />

            <ImageView
                android:id="@+id/activity_login_wechat_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_login_wechat_iv_marginLeft"
                android:layout_toRightOf="@+id/activity_login_sina_iv"
                android:src="@mipmap/wechat_icon" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>