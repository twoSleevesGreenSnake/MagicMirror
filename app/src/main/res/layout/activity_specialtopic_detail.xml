<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/framelayout_nethermost"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/activity_specialtopic_detail_nethermost_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/framelayout_middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.qoo.magicmirror.detail.VerticalViewpager
                    android:id="@+id/activity_specialtopic_detail_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/framelayout_uppermost"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:id="@+id/activity_specialtopic_detail_close_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/activity_specialtopic_detail_close_iv_marginRight"
                    android:layout_marginTop="@dimen/activity_specialtopic_detail_close_iv_marginTop"
                    android:src="@mipmap/display_page" />

                <ImageView
                    android:id="@+id/activity_specialtopic_detail_share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="@dimen/activity_specialtopic_detail_share_iv_marginBottom"
                    android:layout_marginRight="@dimen/activity_specialtopic_detail_share_iv_marginRight"
                    android:src="@mipmap/share" />
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>
</com.zhy.autolayout.AutoRelativeLayout>