    android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_title_tv_marginTop"
    android:textColor="@color/colorLight_Black"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/line_of_create_account"
        android:layout_below="@id/item_detail_brose_glasses_rv_title_tv"
        android:layout_marginTop="@dimen/item_detail_brose_glasses_rv_line_marginTop"
        android:layout_marginLeft="@dimen/item_detail_brose_glasses_rv_line_marginLeft"
        android:layout_marginRight="@dimen/item_detail_brose_glasses_rv_line_marginRight"/>

</com.zhy.autolayout.AutoRelativeLayout>
