<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="浏览所有类别"
            android:textColor="#fff"
            android:textSize="30px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pull_down_arrow"
            android:layout_toRightOf="@+id/fragment_title_tv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/line_of_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line_of_title"
            android:layout_below="@+id/fragment_title_tv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示排序为 最新推荐"
            android:textColor="#fff"
            android:textSize="24px"
            android:layout_below="@+id/line_of_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>

    <com.qoo.magicmirror.homepage.MyRecycleView
        android:id="@+id/fragment_goods_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>