<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_wearatlas_layout">

        <TextView
            android:id="@+id/activity_wearatlas_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_wearatlas_goods_show_detail_marginLeft"
            android:layout_marginTop="@dimen/activity_wearatlas_tv_marginTop"
            android:text="@string/goods_detail_show"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/goods_detail_textSize" />

        <ImageView
            android:id="@+id/activity_wearatlas_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_wearatlas_tv"
            android:layout_marginTop="@dimen/activity_wearatlas_iv_marginTop"
            android:src="@mipmap/line_of_create_account" />

        <ListView
            android:id="@+id/activity_wearatlas_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_wearatlas_iv"></ListView>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/activity_wearatlas_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_wearatlas_back_iv_marginBottom"
            android:layout_marginLeft="@dimen/activity_wearatlas_back_iv_marginLeft"
            android:src="@mipmap/back_btn" />

        <ImageView
            android:id="@+id/activity_wearatlas_purchase_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/activity_wearatlas_purchase_iv_marginBottom"
            android:layout_marginRight="@dimen/activity_wearatlas_purchase_iv_marginRight"
            android:src="@mipmap/purchase_button" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/show_big_layout"
        android:background="@color/colorBlack"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/show_big_img"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>