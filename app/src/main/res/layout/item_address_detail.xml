<?xml version="1.0" encoding="utf-8"?>
<com.qoo.magicmirror.view.SYXDragViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/syxdragviewgroup"
    android:layout_width="@dimen/item_address_detail_address_item_width"
    android:layout_height="@dimen/item_address_detail_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_address_detail_address_item_ll"
            android:layout_width="@dimen/item_address_detail_address_item_ll_width"
            android:layout_height="@dimen/item_address_detail_height"
            android:background="@mipmap/edit_address"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_address_detail_layout"
                android:layout_width="@dimen/layout_width_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_address_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_address_detail_name_marginLeft"
                    android:layout_marginTop="@dimen/item_address_detail_name_marginTop"
                    android:textSize="@dimen/item_address_detail_name_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_address_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_address_detail_address_marginLeft"
                    android:layout_marginTop="@dimen/item_address_detail_address_marginTop"
                    android:textSize="@dimen/item_address_detail_address_textSize" />


                <TextView
                    android:id="@+id/item_address_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_address_detail_number_marginLeft"
                    android:layout_marginTop="@dimen/item_address_detail_number_marginTop"
                    android:textSize="@dimen/item_address_detail_number_textSize" />
            </LinearLayout>

            <ImageView
                android:id="@+id/item_address_detail_edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/item_address_detail_address_item_edit_iv_marginRight"
                android:src="@mipmap/edit" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_address_detail_del_tv"
            android:layout_width="@dimen/item_address_detail_address_item_del_tv_width"
            android:layout_height="@dimen/item_address_detail_address_item_del_tv_height"
            android:layout_toRightOf="@+id/item_address_detail_address_item_ll"
            android:background="@drawable/del_shape"
            android:text="@string/item_address_detail_address_item_del_tv"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/item_address_detail_address_item_del_tv_textSize"
            android:gravity="center"/>
    </LinearLayout>
</com.qoo.magicmirror.view.SYXDragViewGroup>
